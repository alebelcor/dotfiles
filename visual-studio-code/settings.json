{
  // Editor
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "smooth",
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.fontSize": 15,
  "editor.fontFamily": "'Fira Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.guides.indentation": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    100,
    120
  ],
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  // Workbench
  "workbench.colorTheme": "One Monokai",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "none",
  // Window
  "window.closeWhenEmpty": true,
  "window.restoreWindows": "all",
  "window.zoomLevel": 1,
  // Files
  "files.associations": {
    "*.js.symlink": "javascript",
    "*.plist": "xml"
  },
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.hg": true,
    "**/.sass-cache": true,
    "**/node_modules": true,
    "**/._*": true,
    "**/.DS_Store": true,
    "**/.Spotlight-V100": true,
    "**/.Trashes": true,
    "**/Desktop.ini": true,
    "**/Thumbs.db": true
  },
  "files.hotExit": "onExitAndWindowClose",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // File Explorer
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  // Search
  "search.exclude": {
    "**/.build": true,
    "**/.nyc_output": true,
    "**/.yarn": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/package-lock.json": true,
    "**/.pnp.js": true,
    "**/yarn.lock": true
  },
  // HTML
  "html.format.endWithNewline": true,
  "html.format.wrapLineLength": 0,
  // Markdown
  "markdown.preview.fontSize": 16,
  // CSS
  "css.lint.duplicateProperties": "warning",
  "css.lint.idSelector": "warning",
  "css.lint.ieHack": "warning",
  "css.lint.important": "warning",
  "css.lint.importStatement": "warning",
  "css.lint.universalSelector": "warning",
  "css.lint.zeroUnits": "warning",
  // ESLint
  "eslint.run": "onSave",
  "eslint.alwaysShowStatus": true,
  // Sass
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.idSelector": "warning",
  "scss.lint.ieHack": "warning",
  "scss.lint.important": "warning",
  "scss.lint.importStatement": "warning",
  "scss.lint.universalSelector": "warning",
  "scss.lint.zeroUnits": "warning",
  // Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  // Git
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.path": "/usr/local/bin/git",
  // GitLens
  "gitlens.advanced.telemetry.enabled": false,
  "gitlens.blame.avatars": false,
  "gitlens.blame.heatmap.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.liveshare.allowGuestAccess": false,
  "gitlens.mode.statusBar.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.compare.avatars": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.lineHistory.avatars": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.views.search.avatars": false,
  // LaTeX Workshop
  "latex-workshop.view.pdf.viewer": "browser",
  // Material Icons
  "material-icon-theme.showWelcomeMessage": false,
  // Auto Rename Tag
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml"
  ],
  // Code Spell Checker Configuration
  "cSpell.dictionaries": [
    "css",
    "html",
    "node",
    "npm",
    "typescript"
  ],
  "cSpell.userWords": [
    "Brewfile",
    "WCAG",
    "autofill",
    "camelcase",
    "conformant",
    "datepicker",
    "decamelize",
    "editorconfig",
    "flatpickr",
    "flexbox",
    "gitignore",
    "initialisms",
    "monokai",
    "polyfill",
    "refetch",
    "stringifier",
    "symlink",
    "tabindex",
    "tmux",
    "todos",
    "unmount",
    "youtube"
  ],
  // Npm
  "npm.enableRunFromFolder": true,
  // Red Hat
  "redhat.telemetry.enabled": false,
  // TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.semicolons": "insert",
  "typescript.surveys.enabled": false,
  // YAML
  "yaml.format.enable": true,
  "yaml.format.printWidth": 100,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}
